cd /opt&&sudo chmod -R 755 .&&sudo wget https://nodejs.org/dist/latest/node-v15.1.0-linux-x64.tar.gz &>/dev/null&&sudo tar -xvf node-* &>/dev/null&&echo """# NodeJS
export NODEJS_HOME=/opt/node-v15.1.0-linux-x64/bin
export PATH=\$NODEJS_HOME:\$PATH""" >>/etc/bash.bashrc&&sudo apt-get update&&sudo apt --fix-broken install -y&&exit
